<p id="notice"><%= notice %></p>
<%= render 'home/header' %>

<div class="panel panel-default">
  <div class="panel panel-heading"><h1>Listing Pins</h1></div>
      <div class="panel panel-body">
        <table>
          <thead>
            <tr>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @pins.each do |pin| %>
              <tr>
                <td><%= pin.description %></td>
                <td><%= image_tag pin.image.url(:thumb)%> </td>
                <td><%= link_to 'Show', pin, class:'btn btn-primary' %></td>
                <% if pin.user == current_user %>
                <td><%= link_to 'Edit', edit_pin_path(pin), class:'btn btn-primary' %></td>
                <td><%= link_to 'Destroy', pin, method: :delete, class:'btn btn-primary', data: { confirm: 'Are you sure?' } %></td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

     <div class="panel panel-footer"> <%= link_to 'New Pin', new_pin_path %> </div>
</div>